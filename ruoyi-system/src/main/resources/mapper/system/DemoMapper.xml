<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.DemoMapper">
    
    <resultMap type="Demo" id="DemoResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="createBy"     column="create_by"    />
        <result property="createTime"   column="create_time"  />
        <result property="updateBy"     column="update_by"    />
        <result property="updateTime"   column="update_time"  />
    </resultMap>
	
	<sql id="selectDemoVo">
        select id, name from sys_demo
    </sql>
	
    <select id="selectDemoList" parameterType="Demo" resultMap="DemoResult">
        <include refid="selectDemoVo"/>
        <where>  
            <if test="id != null  and id != '' "> and id = #{id}</if>
             <if test="name != null  and name != '' "> and name like concat('%', #{name}, '%')</if>
         </where>
    </select>
    
    <select id="selectDemoById" parameterType="String" resultMap="DemoResult">
        <include refid="selectDemoVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertDemo" parameterType="Demo">
        insert into sys_demo
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null  and id != ''  ">id,</if>
			<if test="name != null  and name != ''  ">name,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null  and id != ''  ">#{id},</if>
			<if test="name != null  and name != ''  ">#{name},</if>
         </trim>
    </insert>
	 
    <update id="updateDemo" parameterType="Demo">
        update sys_demo
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null  and name != ''  ">name = #{name},</if>
        </trim>
        where id = #{id}
    </update>

	<delete id="deleteDemoById" parameterType="String">
        delete from sys_demo where id = #{id}
    </delete>
	
    <delete id="deleteDemoByIds" parameterType="String">
        delete from sys_demo where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>